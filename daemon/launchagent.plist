<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Unique identifier for this service -->
    <key>Label</key>
    <string>com.codex.telegram-relay</string>

    <!-- Command to run -->
    <key>ProgramArguments</key>
    <array>
        <!-- UPDATE THIS: Path to bun -->
        <string>/Users/YOUR_USERNAME/.bun/bin/bun</string>
        <string>run</string>
        <string>src/relay.ts</string>
    </array>

    <!-- Working directory -->
    <key>WorkingDirectory</key>
    <!-- UPDATE THIS: Path to your relay directory -->
    <string>/Users/YOUR_USERNAME/codex-telegram-relay</string>

    <!-- Environment variables -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <!-- UPDATE THIS: Include paths to bun, node, codex -->
        <string>/Users/YOUR_USERNAME/.bun/bin:/usr/local/bin:/usr/bin:/bin</string>
        <key>HOME</key>
        <!-- UPDATE THIS -->
        <string>/Users/YOUR_USERNAME</string>
    </dict>

    <!-- Start when loaded -->
    <key>RunAtLoad</key>
    <true/>

    <!-- Keep running (restart if it crashes) -->
    <key>KeepAlive</key>
    <true/>

    <!-- Log files -->
    <key>StandardOutPath</key>
    <!-- UPDATE THIS -->
    <string>/Users/YOUR_USERNAME/Library/Logs/codex-telegram-relay.log</string>

    <key>StandardErrorPath</key>
    <!-- UPDATE THIS -->
    <string>/Users/YOUR_USERNAME/Library/Logs/codex-telegram-relay.error.log</string>

    <!-- Wait 10 seconds before restarting after crash -->
    <key>ThrottleInterval</key>
    <integer>10</integer>
</dict>
</plist>

<!--
SETUP INSTRUCTIONS:

1. Replace all YOUR_USERNAME with your actual macOS username

2. Copy to LaunchAgents:
   cp daemon/launchagent.plist ~/Library/LaunchAgents/com.codex.telegram-relay.plist

3. Make sure your .env file exists in the relay directory

4. Load the agent:
   launchctl load ~/Library/LaunchAgents/com.codex.telegram-relay.plist

5. Check if running:
   launchctl list | grep codex

6. View logs:
   tail -f ~/Library/Logs/codex-telegram-relay.log

7. To stop:
   launchctl unload ~/Library/LaunchAgents/com.codex.telegram-relay.plist

8. To restart:
   launchctl unload ~/Library/LaunchAgents/com.codex.telegram-relay.plist
   launchctl load ~/Library/LaunchAgents/com.codex.telegram-relay.plist
-->
